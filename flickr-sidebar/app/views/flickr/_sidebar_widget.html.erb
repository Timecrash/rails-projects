<% user = flickr.people.getInfo(user_id: user_id) %>
<h2><%= user.realname %>'s Photostream </h2>

<div class="flickr">
  <ul>
    <% photos.each do |p| %>
      <% info = flickr.photos.getInfo(photo_id: p.id) %>
      <%= link_to(image_tag(FlickRaw.url_b(info), class: "flickr_img", title: p.title),
                  FlickRaw.url_photopage(info)) %>
    <% end %>
  </ul>
</div>
